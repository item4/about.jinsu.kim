{
  "name": "resume",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "packageManager": "yarn@3.6.0",
  "dependencies": {
    "@next/env": "^13.4.5",
    "@swc-node/register": "^1.6.5",
    "@swc/core": "^1.3.62",
    "@types/node": "^20.3.0",
    "@types/react": "^18.2.12",
    "@types/react-dom": "^18.2.5",
    "minify-xml": "^3.4.0",
    "next": "^13.4.5",
    "next-sitemap": "^4.1.3",
    "pretendard": "^1.3.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "schema-dts": "^1.1.2",
    "the-new-css-reset": "^1.8.4",
    "typescript": "^5.1.3"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^13.4.5",
    "@types/prettier": "^2.7.3",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "eslint": "^8.42.0",
    "eslint-config-next": "^13.4.5",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "serve": "^14.2.0"
  },
  "scripts": {
    "build": "yarn build:next && yarn build:sitemap && yarn build:etc",
    "build:next": "next build",
    "build:sitemap": "next-sitemap --config next-sitemap.config.mjs",
    "build:etc": "yarn swc-node src/core/postbuild/index.ts",
    "setup": "yarn setup:husky",
    "setup:husky": "husky install",
    "check": "yarn check:lint && yarn check:type",
    "check:lint": "next lint",
    "check:type": "tsc --noEmit",
    "dev": "next dev",
    "dev:serve": "serve out",
    "format": "yarn format:json && yarn format:lint && yarn format:prettier",
    "format:json": "yarn swc-node src/format/json.ts",
    "format:lint": "next lint --fix",
    "format:prettier": "prettier --write .",
    "start": "yarn dev",
    "swc-node": "yarn node --loader @swc-node/register/esm"
  }
}
